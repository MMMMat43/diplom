@page
@model VKRvs.Pages.LoginModel
@{
    ViewData["Title"] = "Авторизация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Авторизация</h2>
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" asp-for="LoginData.Email" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Пароль</label>
                            <input type="password" asp-for="LoginData.Password" class="form-control" required />
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-warning">Войти</button>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @Model.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
