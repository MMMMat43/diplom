<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VKRvs</title>

    <!-- Bootstrap и иконки -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body style="background-color: #fff8f0;">

    <!-- 🍽 Универсальная шапка -->
    <header class="bg-white shadow-sm">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <a class="navbar-brand fw-bold text-warning fs-3" asp-page="/Menu">
                <i class="bi bi-shop-window me-2"></i>Ресторан
            </a>

            <div class="d-flex gap-3">
                <a asp-page="/Menu" class="btn btn-outline-warning" title="Меню">
                    <i class="bi bi-book-half fs-5"></i>
                </a>
                <a asp-page="/Cart" class="btn btn-outline-warning" title="Корзина">
                    <i class="bi bi-cart3 fs-5"></i>
                </a>
                <a asp-page="/MyOrders" class="btn btn-outline-warning" title="Мои заказы">
                    <i class="bi bi-bag-check fs-5"></i>
                </a>
                <a asp-page="/Login" class="btn btn-outline-warning" title="Вход">
                    <i class="bi bi-person fs-5"></i>
                </a>
            </div>
        </div>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    @* <footer class="bg-white text-center py-3 mt-5 border-top">
        <small class="text-muted">© 2025 VKRvs. Все права защищены.</small>
    </footer> *@

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
