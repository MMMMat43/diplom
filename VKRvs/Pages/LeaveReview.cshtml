@page "{menuItemId:int}"
@model VKRvs.Pages.LeaveReviewModel
@{
    <h2>Оставить отзыв</h2>

    <form method="post">
        <input type="hidden" asp-for="Review.MenuitemId" />
        <div class="mb-3">
            <label>Оценка (1-5):</label>
            <input asp-for="Review.Rating" class="form-control" type="number" min="1" max="5" />
        </div>
        <div class="mb-3">
            <label>Отзыв:</label>
            <textarea asp-for="Review.ReviewText" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Отправить</button>
    </form>
}
